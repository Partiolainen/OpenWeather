<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>OpenWeather</RootNamespace>
    <LangVersion>latest</LangVersion>
    <Version>1.3.0</Version>
    <Authors>Centauri Software &amp; Innovations, Ryan Cooper, Partiolainen</Authors>
    <Company>Centauri Software &amp; Innovations, Ryan Cooper, Partiolainen</Company>
    <Description>Library to search and retrieve weather data (from NOAA) via latitude and logitude or ICAO code. Ported to .NET Standard</Description>
    <Copyright>Copyright Â© Ryan Cooper 2016, Partiolainen 2019</Copyright>
    <PackageTags>Weather, ICAO, METAR, OpenWeather, OpenWeather.pw</PackageTags>
    <PackageProjectUrl>http://openweather.pw/</PackageProjectUrl>
    <PackageLicenseUrl></PackageLicenseUrl>
	<PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>OpenWeather.PW.Core</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <None Include="LICENSE.txt" Pack="true" PackagePath="LICENSE.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GeoCoordinate.NetStandard1" Version="1.0.1" />
    <PackageReference Include="UnitsNet" Version="4.20.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
